<?xml version="1.0" encoding="UTF-8"?>

    <androidx.constraintlayout.widget.ConstraintLayout tools:context=".useractivity" android:layout_height="match_parent" android:layout_width="match_parent" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent" android:textStyle="bold|italic" android:textSize="36sp" android:textColor="#F44336" android:text="WELCOME!" android:layout_marginTop="40dp" android:id="@+id/welcomeTV"/>

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent" android:textSize="36sp" android:textColor="#3F51B5" android:layout_marginTop="24dp" android:id="@+id/usernameTV" app:layout_constraintTop_toBottomOf="@+id/welcomeTV"/>

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" app:layout_constraintStart_toStartOf="parent" android:textSize="30sp" android:text="Age" android:layout_marginTop="80dp" android:id="@+id/ageTV" app:layout_constraintTop_toBottomOf="@+id/usernameTV" android:layout_marginLeft="8dp" android:layout_marginStart="8dp"/>

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" app:layout_constraintStart_toStartOf="parent" android:textSize="30sp" android:text="Email" android:layout_marginTop="32dp" android:id="@+id/Email" app:layout_constraintTop_toBottomOf="@+id/ageTV" android:layout_marginLeft="8dp" android:layout_marginStart="8dp"/>

    <EditText android:layout_height="wrap_content" android:layout_width="0dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="80dp" android:id="@+id/ageET" app:layout_constraintTop_toBottomOf="@+id/usernameTV" android:layout_marginLeft="48dp" android:layout_marginStart="48dp" app:layout_constraintStart_toEndOf="@+id/ageTV" android:inputType="textPersonName" android:hint="Age" android:ems="10" android:layout_marginRight="8dp" android:layout_marginEnd="8dp"/>

    <EditText android:layout_height="wrap_content" android:layout_width="0dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="32dp" android:id="@+id/emailET" app:layout_constraintTop_toBottomOf="@+id/ageET" android:layout_marginLeft="48dp" android:layout_marginStart="48dp" app:layout_constraintStart_toEndOf="@+id/ageTV" android:inputType="textPersonName" android:hint="Email" android:ems="10" android:layout_marginRight="8dp" android:layout_marginEnd="8dp"/>

    <Button android:layout_height="wrap_content" android:layout_width="wrap_content" app:layout_constraintStart_toStartOf="@+id/emailET" app:layout_constraintEnd_toEndOf="@+id/emailET" android:textSize="24sp" android:text="Back" android:layout_marginTop="40dp" android:id="@+id/backBtn" app:layout_constraintTop_toBottomOf="@+id/emailET" android:onClick="backBtnClick"/>

</androidx.constraintlayout.widget.ConstraintLayout>